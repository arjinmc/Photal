<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="bottom">
        <shape>
            <padding
                android:bottom="3px"
                android:right="3px" />
            <solid android:color="@color/photal_album_background" />
            <stroke
                android:width="2dp"
                android:color="@color/photal_album_background"></stroke>
        </shape>
    </item>
    <item android:gravity="top">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/photal_black"></stroke>
        </shape>
    </item>
</layer-list>