<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="layout_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="layout_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="layout_mm.v" parent="layout_mm">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_mm.h" parent="layout_mm">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="layout_mw.v" parent="layout_mw">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_mw.h" parent="layout_mw">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="layout_mm.single" parent="layout_mm">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="layout_mw.single" parent="layout_mw">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="layout_ww.single" parent="layout_ww">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="photo_grid_item_album_title" parent="layout_ww.single">
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>
    <style name="photo_grid_item_album_count" parent="layout_ww.single">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/photo_grid_count</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
    </style>
</resources>